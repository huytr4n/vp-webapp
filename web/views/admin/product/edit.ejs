<script src="/clients/product.js"></script>
<html ng-app>
	<h1>Edit product</h1>
	<div ng-controller="EditCtrl" ng-init="init('<%=id%>')">		
		<table>
			<tr>
				<td><label>Product title</label></td>
				<td><input type="text" name="title" ng-model="product.title" ></td>
				<td></td>
			</tr>
			<tr>
				<td><label>Product catalog</label></td>
				<td><input type="text" name="catalog" ng-model="product.catalog" ></td>
				<td></td>
			</tr>			
			<tr>
				<td><label>Outline</label></td>
				<td><input type="text" name="outline" ng-model="product.outline" ></td>
				<td></td>
			</tr>
			<tr>
				<td><label>Configuration</label></td>
				<td></td>
				<td></td>
			</tr>
			<tr>
				<td><label>CPU</label></td>
				<td><input type="text" name="CPU" ng-model="product.config.CPU.name" ></td>
				<td></td>
			</tr>
			<tr>
				<td><label>RAM</label></td>
				<td><input type="text" name="RAM" ng-model="product.config.RAM.name"></td>
				<td></td>
			</tr>
			<tr>
				<td><label>VGA</label></td>
				<td><input type="text" name="VGA" ng-model="product.config.VGA.name"></td>
				<td></td>
			</tr>
			<tr>
				<td><label>HDD</label></td>
				<td><input type="text" name="HDD" ng-model="product.config.HDD.name"></td>
				<td></td>
			</tr>
			<tr>
				<td><label>Others</label></td>
				<td><input type="text" name="other" ng-model="product.config.other" ></td>
				<td></td>
			</tr>
			<tr>
				<td><label>Price</label></td>
				<td><input type="text" name="price_number" ng-model="product.price.number"></td>
				<td></td>
			</tr>
			<tr>
				<td><label>Currency</label></td>
				<td><input type="text" name="price_currency" ng-model="product.price.currency"></td>
				<td></td>
			</tr>
			<tr>
				<td><input type='submit' value='Save' class='btn btn-success'></td>
				<td></td>
				<td></td>
			</tr>
		</table>
	</div>
</html>